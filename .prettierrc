{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "printWidth": 100,
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "bracketSameLine": false,
  "proseWrap": "preserve",
  "plugins": ["prettier-plugin-sort-json"],
  "overrides": [
    {
      "files": ["app/i18n/locales/**/*.json"],
      "options": {
        "jsonRecursiveSort": true
      }
    }
  ]
}
